  "scripts": {
    "compile": "hardhat compile",
    "typechain": "hardhat typechain",
    "coverage": "hardhat coverage",
    "test": "hardhat test",
    "test:testnet": "hardhat test --network testnet",
    "deploy": "hardhat deploy",
    "deploy:testnet": "hardhat deploy --network testnet",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "lint": "eslint '**/**.ts' --ignore-path './.eslintignore' && solhint 'contracts/**/*.sol'",
    "lint:fix": "eslint --fix '**/**.ts' --ignore-path './.eslintignore' && solhint --fix 'contracts/**/*.sol'",
    "format:fix": "prettier --write '**/**.*' --plugin-search-dir= './node_modules'",
    "format": "prettier --check '**/**.*' --plugin-search-dir= './node_modules'",
    "verify:testnet": "hardhat verify --network testnet",
    "verify:mainnet": "hardhat verify --network mainnnet"
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.2.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "chalk": "^4.1.2",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.0",
    "hardhat": "^2.5.0",
    "hardhat-deploy": "^0.8.11",
    "hardhat-etherscan": "^1.0.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "prettier": "^2.3.2",
